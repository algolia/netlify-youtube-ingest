---
const { header } = Astro.props;
---
<style lang="scss">
    .card {
        background-color: #fff;
        border: 1px solid #ccc;
    }
    header {
        padding:.5rem;
        border-bottom: 1px solid #ccc;
        & h2 {
            margin: 0;
            font-size: 1rem;
            font-weight: bold;
        }
    }
    .content {
        padding: 20px;
    }
</style>

<div class="card">
    <header><h2>{header}</h2></header>
    <div class="content">
        <slot />
    </div>
</div>